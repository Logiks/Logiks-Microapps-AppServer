{
	"schema": "1.0",
	"title": "Applications",
	"category": "HR",
	"privilege": "*",
	"blocked": false,
	"rowlink": false,
	"rowsPerPage": 20,
	"showExtraColumn":false,
	"uiswitcher": true,
	"custombar": false,
	"topbar":{
	    "uitype":"type1"
	},
	"source": {
		"type": "sql",
		"table": "applications",
		"cols": "*",
		"where":{
		    "applications.blocked":"false",
            "(applications.guid = '#SESS_GUID#'  OR  #SESS_PRIVILEGE_ID# <= #ADMIN_PRIVILEGE_RANGE#)": "RAW"		    
	    },
		"limit": 20
	},
	"actions": {
	    "forms@manage.application/new": {
		    "label": "Add Application",
			"icon": "fa fa-plus"
		}
	},
	"buttons": {
		"infoview@manage.application/{hashid}": {
		    "label": "View Application",
			"icon": "fa fa-eye"
		},
		"forms@manage.application/edit/{hashid}": {
		    "label": "Edit Application",
			"icon": "fa fa-pencil"
		}
	},
	"datagrid": {
		"applications.id": {
			"label": "ID",
			"hidden": false,
			"searchable": true,
			"sortable": true,
			"groupable": false,
			"classes": "",
			"style": "width:50px%3B",
			"formatter": "text"
		},
		
		"applications.appid": {
			"label": "App ID",
			"searchable": true,
			"sortable": true
		},
		"applications.appname": {
			"label": "App Name",
			"searchable": true,
			"sortable": true
		},
		"applications.promptengine": {
			"label": "Prompt Engine",
			"searchable": true,
			"sortable": true,
		    "filter": {
                "type": "dataSelectorFromUniques",
                "nofilter": "--",
                "table": "applications",
                "columns": "promptengine,promptengine"
            }
		},
		"applications.datastore_id": {
			"label": "Data Store ID",
			"searchable": true,
			"sortable": true
		},
		"applications.datastore_strategy": {
			"label": "Data Store Strategy",
			"searchable": true,
			"sortable": true,
		    "filter": {
                "type": "dataSelectorFromUniques",
                "nofilter": "--",
                "table": "applications",
                "columns": "datastore_strategy,datastore_strategy"
            }
		},
		"applications.appstatus": {
			"label": "App Status",
			"searchable": true,
			"sortable": true,
			"formatter":"pretty",
		    "filter": {
                "type": "dataSelectorFromUniques",
                "nofilter": "--",
                "table": "applications",
                "columns": "appstatus,appstatus"
            }
		},
		"applications.blocked":{
		    "label":"Blocked",
		    "sortable": true,
		    "searchable": true,
		    "hidden":true
		},
		"applications.created_by":{
		    "label":"Added By",
		    "sortable": true,
		    "searchable": true,
		    "hidden":true
		},
		"applications.created_on":{
		    "label":"Added On",
		    "sortable": true,
		    "searchable": true,
		    "formatter":"datetime",
			"filter":{
				"type":"date"
			},
		    "hidden":true
		},
